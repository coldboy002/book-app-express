extends ../layout

block content
  .container
    .row
      .col-6.mx-auto
        h1.text-center Cập nhật thông tin người dùng
        .container.mx-auto
          .row
            .col-12
              form.mt-4(method='POST')
                div
                  .form-group
                    label(for='name') Tên:
                    input#name.form-control(type='text' name='name' placeholder="Xin nhập tiêu đề sách" value=name required)
                  .form-group
                    label(for='age') Tuổi:
                    input#age.form-control(type='text' name='age'  placeholder="Xin nhập mô tả sách" value=age required)
                  button.btn.btn-primary.btn-block(type="submit").btn.btn-primary Cập nhật
